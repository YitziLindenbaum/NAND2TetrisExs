/**
 * Computes the sum of two bits.
 */

CHIP HalfAdder {
    IN a, b;    // 1-bit inputs
    OUT sum,    // Right bit of a + b 
        carry;  // Left bit of a + b

    PARTS:
    Xor (a=a, b=b, out=sum);  // Four Nand gates (as per the built-in implementation)
    And (a=a, b=b, out=carry);  // Two Nand gates
}
